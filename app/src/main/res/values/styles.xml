<resources>

    <style name="MenuTheme">
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="fontFamily">@font/mregular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToastTheme">
        <item name="stTextBold">false</item>
        <item name="stTextColor">#FF0000</item>
        <item name="stFont">@font/mmedium</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">?attr/colorStrokeInput</item>
        <item name="stSolidBackground">false</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#FF0000</item>
        <item name="stLength">LONG</item>
        <item name="stGravity">center</item>
        <item name="stRadius">5dp</item>
    </style>
</resources>